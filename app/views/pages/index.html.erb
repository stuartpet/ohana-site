<section class="hero" id="top">
  <video
    class="hero-video"
    autoplay
    muted
    loop
    playsinline
    data-controller="video-reload"
    data-action="turbo:frame-load->video#reload turbo:load->video#reload"
  >
    <source src="<%= asset_path('hero-bg.mp4') %>" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="hero-overlay">
    <h1>Aligning property with purpose</h1>
  </div>
</section>

<main class="horizontal-scroll" data-controller="scroll-cards">
  <div class="scroll-card"  id="top">
    <div class="card">
      <%= image_tag "why_ohana.jpg", alt: "About Ohana", class: "card-image" %>
      <div class="card-content">
        <h2>Why Ohana?</h2>
        <p>Ohana Consulting is a specialist property consultancy offering strategic advice and estate management tailored to your needs.</p>
        <!-- Nested horizontal scroll -->
        <div class="carousel" data-controller="carousel">
          <div class="carousel-track" data-carousel-target="track">
            <div class="carousel-slide active" data-carousel-target="slide">
              <h3>Tailored Advice</h3>
              <p>We provide insight that reflects your goals, not just the market.</p>
            </div>
            <div class="carousel-slide" data-carousel-target="slide">
              <h3>Proven Track Record</h3>
              <p>With 20+ years of impact, our advice drives meaningful results.</p>
            </div>
            <div class="carousel-slide" data-carousel-target="slide">
              <h3>People-First Approach</h3>
              <p>We align property with purpose for public good, not just profit.</p>
            </div>
          </div>

          <div class="carousel-dots" data-carousel-target="dots"></div>
        </div>
        <!-- END carousel -->
      </div>
    </div>
  </div>

  <section class="scroll-card" id="services" >
    <div class="card">
      <%= image_tag "services.jpg", alt: "What We Do", class: "card-image" %>
      <div class="card-content">
        <h2>What We Do</h2>
        <p>We provide strategy, planning, transactions, and delivery support. NHS, councils, or private — Ohana brings clarity to every property decision.</p>
        <%= link_to "View services →", services_path, class: "btn-cta" %>
      </div>
    </div>
  </section>

  <section class="scroll-card" id="projects">
    <div class="card">
      <%= image_tag "clients.jpg", alt: "Past Work", class: "card-image" %>
      <div class="card-content">
        <h2>Past Work</h2>
        <p>We help local and central government clients with estate strategies and operational planning, delivering value and alignment with their mission.</p>
        <%= link_to "View projects →", projects_path, class: "btn-cta" %>
      </div>
    </div>
  </section>

  <section class="scroll-card" id="about">
    <div class="card">
      <%= image_tag "about.jpg", alt: "About Ohana", class: "card-image" %>
      <div class="card-content">
        <h2>Our Story</h2>
        <p>Ohana Consulting was founded to align property with purpose. With over 20 years of experience, Kate supports clients with strategic and people-first property advice.</p>
        <%= link_to "Meet Our Founder →", about_path, class: "btn-cta" %>
      </div>
    </div>
  </section>

  <section class="scroll-card" id="contact">
    <div class="card">
      <%= image_tag "contact.jpg", alt: "Get in Touch", class: "card-image" %>
      <div class="card-content">
        <h2>Get in Touch</h2>
        <p>Let’s talk about how we can support your estate strategy or property needs. We’d love to hear from you.</p>
        <%= link_to "Contact us →", contacts_path, class: "btn-cta" %>
      </div>
    </div>
  </section>
</main>

