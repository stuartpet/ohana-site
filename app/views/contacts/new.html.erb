<section class="section">
  <h2>Contact Us</h2>
  <p>We collect only the details we need to respond to your message. Your data wonâ€™t be stored or shared beyond this purpose.</p>

  <%= form_with model: @contact, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Your Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Your Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :message, "Your Message" %>
      <%= form.text_area :message, rows: 5, class: "form-control" %>
    </div>

    <%= form.submit "Send Message", class: "btn-submit" %>
  <% end %>
</section>
